<Gridd>:
    size_hint_x:None
    rows:1
    width:self.minimum_width  
<HBoxTable>:
    orientation:'horizontal'
    size_hint_y:None
    height:'35px'
    canvas:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size    
<VBoxTable>:
    orientation:'vertical'
    size_hint_x:None
    width:'35px'
    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
<LabelTable>:
    halign:'center'
    font_style:'Caption'

<MainUI>:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    MDToolbar:
        title: "MÃ©todo Simplex"

        anchor_title: 'center'
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            orientation:'horizontal'
            size_hint_y: None
            height: '50px'
            BoxLayout:
                size_hint_x: (.5)
            MDBoxLayout:
                size_hint_x:None
                width: '161px'
                MDLabel:
                    text: "Cantidad de variables:"
            AnchorLayout:
                anchor_x: 'left'
                anchor_y:'center'
                size_hint_x: None
                width: '120px'
                TextInput:
                    id: txt_var
                    size_hint: (None,None)
                    size:('100px','30px')
                    hint_text: 'variables'
            MDBoxLayout:
